<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RFID Login - Sistem Peminjaman Proyektor</title>
    <link href="/css/tailwind.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
                box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.7);
            }
            50% {
                transform: scale(1.05);
                box-shadow: 0 0 0 20px rgba(99, 102, 241, 0);
            }
        }
        .rfid-icon-animate {
            animation: pulse 2s infinite;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        .loading-spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
        }
    </style>
</head>
<body class="min-h-screen bg-gray-100 text-gray-900 flex justify-center items-center px-4">
    <div class="max-w-md w-full bg-white shadow-lg sm:rounded-lg overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-500 to-indigo-600 text-white text-center py-12">
            <h1 class="text-3xl font-extrabold">RFID Login</h1>
            <p class="text-indigo-100 mt-2">Tap kartu RFID Anda untuk login otomatis</p>
        </div>
        
        <div class="p-8 text-center">
            <div class="w-40 h-40 mx-auto mb-8 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-full flex items-center justify-center rfid-icon-animate">
                <i class="fas fa-id-card text-white text-7xl"></i>
            </div>
            
            <div id="alertBox" class="hidden mb-6"></div>
            
            <div id="waitingStatus">
                <p class="text-xl font-semibold text-gray-800 mb-2">Menunggu Kartu RFID...</p>
                <p class="text-sm text-gray-600">
                    Tempelkan kartu RFID/NFC Anda pada reader<br>
                    <span class="text-xs text-gray-400 mt-2 inline-block">Pastikan ESP32 RFID reader sudah aktif</span>
                </p>
            </div>
            
            <div id="userInfo" class="bg-gray-50 rounded-lg p-6 mt-6 hidden">
                <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center justify-center">
                    <i class="fas fa-check-circle text-green-500 mr-2"></i>
                    Login Berhasil!
                </h3>
                <div class="space-y-3 text-left">
                    <div class="flex justify-between border-b border-gray-200 pb-2">
                        <label class="font-semibold text-gray-600">Nama:</label>
                        <span id="userName" class="text-gray-800">-</span>
                    </div>
                    <div class="flex justify-between border-b border-gray-200 pb-2">
                        <label class="font-semibold text-gray-600">Username:</label>
                        <span id="userUsername" class="text-gray-800">-</span>
                    </div>
                    <div class="flex justify-between border-b border-gray-200 pb-2">
                        <label class="font-semibold text-gray-600">Role:</label>
                        <span id="userRole" class="text-gray-800">-</span>
                    </div>
                    <div class="flex justify-between">
                        <label class="font-semibold text-gray-600">NIM:</label>
                        <span id="userNim" class="text-gray-800">-</span>
                    </div>
                </div>
                
                <div class="flex gap-3 mt-6">
                    <button onclick="goToDashboard()" 
                        class="flex-1 bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-200">
                        Buka Dashboard
                    </button>
                    <button onclick="resetPage()" 
                        class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-200">
                        Tap Lagi
                    </button>
                </div>
            </div>
            
            <div class="mt-6">
                <a href="/login" class="text-indigo-600 hover:text-indigo-800 text-sm">
                    <i class="fas fa-arrow-left mr-1"></i> Login Manual (Username & Password)
                </a>
            </div>
        </div>
    </div>

    <script>
        let lastUid = null;
        let pollInterval = null;

        function showAlert(message, type) {
            const alertBox = document.getElementById('alertBox');
            alertBox.textContent = message;
            alertBox.className = `px-4 py-3 rounded-lg mb-6 text-sm ${
                type === 'success' ? 'bg-green-100 border border-green-400 text-green-700' :
                type === 'error' ? 'bg-red-100 border border-red-400 text-red-700' :
                'bg-blue-100 border border-blue-400 text-blue-700'
            }`;
            alertBox.classList.remove('hidden');
            
            if (type === 'error') {
                setTimeout(() => {
                    alertBox.classList.add('hidden');
                }, 5000);
            }
        }

        function displayUserInfo(user) {
            document.getElementById('userName').textContent = user.nama;
            document.getElementById('userUsername').textContent = user.username;
            document.getElementById('userRole').textContent = user.role.toUpperCase();
            document.getElementById('userNim').textContent = user.nim || '-';
            
            document.getElementById('waitingStatus').classList.add('hidden');
            document.getElementById('userInfo').classList.remove('hidden');
            
            showAlert('Login berhasil! Redirect ke dashboard dalam 2 detik...', 'success');
            
            setTimeout(() => {
                window.location.href = '/dashboard';
            }, 2000);
        }

        function resetPage() {
            document.getElementById('waitingStatus').classList.remove('hidden');
            document.getElementById('userInfo').classList.add('hidden');
            document.getElementById('alertBox').classList.add('hidden');
            lastUid = null;
        }

        function goToDashboard() {
            window.location.href = '/dashboard';
        }

        let checkInterval = null;
        
        async function startPolling() {
            checkInterval = setInterval(async () => {
                try {
                    const response = await fetch('/api/check-session');
                    const data = await response.json();
                    
                    if (data.isLoggedIn) {
                        clearInterval(checkInterval);
                        displayUserInfo(data.user);
                    }
                } catch (error) {
                    console.error('Polling error:', error);
                }
            }, 1000);
        }

        window.addEventListener('load', () => {
            console.log('RFID Login page loaded');
            console.log('Waiting for RFID tap from ESP32...');
            console.log('ESP32 should POST to: /rfid with body: {"uid": "XX:XX:XX:XX"}');
            
            startPolling();
            console.log('âœ… Polling started - checking session every 1 second');
        });

        window.testRfidLogin = function(uid) {
            fetch('/rfid', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ uid: uid })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    displayUserInfo(data.user);
                } else {
                    showAlert(data.message, 'error');
                }
            })
            .catch(err => {
                showAlert('Error: ' + err.message, 'error');
            });
        };
    </script>
</body>
</html>
