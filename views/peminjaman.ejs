<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Peminjaman Proyektor</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/accessibility-modes.css" rel="stylesheet">
    <!-- Face Detection API -->
    <script async defer src="https://cdn.jsdelivr.net/npm/@vladmandic/face-api/dist/face-api.min.js"></script>
    <script src="/js/accessibility-modes.js"></script>
    <script src="/js/face-detection.js"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <!-- Header Banner Section -->
    <div class="bg-gradient-to-r from-blue-600 to-white py-4 shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-white drop-shadow-lg"><%= campusName %></h1>
            </div>
        </div>
    </div>
    
    <!-- Navbar -->
    <nav class="bg-white shadow-lg sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <i class="fas fa-hand-holding text-green-600 text-xl sm:text-2xl mr-2 sm:mr-3"></i>
                    <h1 class="text-base sm:text-xl font-bold text-gray-800">Form Peminjaman</h1>
                </div>
                
                <!-- Desktop Menu -->
                <div class="hidden md:flex items-center space-x-4">
                    <a href="/" class="text-gray-600 hover:text-indigo-600 transition duration-200">
                        <i class="fas fa-home mr-1"></i> Home
                    </a>
                    <a href="/dashboard" class="text-gray-600 hover:text-indigo-600 transition duration-200">
                        <i class="fas fa-chart-line mr-1"></i> Dashboard
                    </a>
                </div>

                <!-- Mobile Menu Button -->
                <div class="md:hidden flex items-center">
                    <button id="mobileMenuBtn" class="text-gray-600 hover:text-indigo-600 focus:outline-none transition">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden bg-white border-t border-gray-200">
            <div class="px-4 pt-2 pb-4 space-y-2">
                <a href="/" class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 rounded-lg transition duration-200">
                    <i class="fas fa-home w-6 mr-2"></i> Home
                </a>
                <a href="/dashboard" class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 rounded-lg transition duration-200">
                    <i class="fas fa-chart-line w-6 mr-2"></i> Dashboard
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white rounded-xl shadow-2xl p-8 md:p-12">
            <div class="text-center mb-8">
                <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-hand-holding text-green-600 text-3xl"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-800">Form Peminjaman Proyektor</h2>
                <p class="text-gray-600 mt-2">Lengkapi form di bawah ini untuk meminjam proyektor</p>
            </div>

            <form id="formPeminjaman" class="space-y-6">
                <!-- Nama Lengkap -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-user mr-2"></i>Nama Lengkap <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="nama" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition"
                        placeholder="Masukkan nama lengkap">
                </div>

                <!-- NIM -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-id-badge mr-2"></i>NIM <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="nim" required maxlength="11" pattern="[0-9]{11}" inputmode="numeric"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition"
                        placeholder="Contoh: 60200123456">
                    <p class="text-xs text-gray-500 mt-1">Masukkan 11 digit NIM, contoh <code>60200123456</code></p>
                </div>

                <!-- Kelas -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-chalkboard mr-2"></i>Kelas <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="kelas" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition"
                        placeholder="Contoh: TI-3A">
                </div>

                <!-- Nama Dosen -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-user-tie mr-2"></i>Nama Dosen <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="namaDosen" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition"
                        placeholder="Contoh: Dr. Ahmad Wijaya, S.Kom., M.Kom">
                </div>

                <!-- Jam Kuliah -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-clock mr-2"></i>Jam Kuliah <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="jamKuliah" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition"
                        placeholder="Contoh: 08:00 - 10:00">
                </div>

                <!-- Merk Proyektor -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-video mr-2"></i>Pilih Proyektor <span class="text-red-500">*</span>
                    </label>
                    <select id="merkProyektor" required 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition">
                        <option value="">-- Pilih Proyektor Tersedia --</option>
                        <% if (proyektor && proyektor.length > 0) { %>
                            <% proyektor.forEach(p => { %>
                                <option value="<%= p.merk %> <%= p.model %>">
                                    <%= p.kode %> - <%= p.merk %> <%= p.model %> (<%= p.brightness %>, <%= p.resolusi %>)
                                </option>
                            <% }); %>
                        <% } else { %>
                            <option value="" disabled>Tidak ada proyektor tersedia</option>
                        <% } %>
                    </select>
                    <p class="text-xs text-gray-500 mt-1">
                        <i class="fas fa-info-circle mr-1"></i>
                        Hanya menampilkan proyektor yang tersedia saat ini
                    </p>
                </div>

                <!-- No Telepon (Opsional) -->
                <div>
                    <label class="block text-gray-700 font-semibold mb-2">
                        <i class="fas fa-phone mr-2"></i>No. Telepon/WhatsApp <span class="text-green-600 text-sm">(Untuk notifikasi otomatis)</span>
                    </label>
                    <input type="tel" id="noTelepon" 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition"
                        placeholder="Contoh: 08123456789 atau 628123456789">
                    <p class="text-xs text-gray-500 mt-1">
                        <i class="fab fa-whatsapp text-green-500 mr-1"></i>
                        Isi nomor WhatsApp untuk menerima notifikasi peminjaman
                    </p>
                </div>

                <!-- Kamera Section -->
                <div class="border-t pt-6">
                    <label class="block text-gray-700 font-semibold mb-4">
                        <i class="fas fa-camera mr-2"></i>Foto Bukti Peminjaman <span class="text-red-500">*</span>
                    </label>
                    
                    <div class="space-y-4">
                        <!-- Toggle Kamera Button -->
                        <button type="button" id="toggleCamera" 
                            class="w-full bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg transition">
                            <i class="fas fa-camera mr-2"></i>Nyalakan Kamera
                        </button>

                        <!-- Video Preview -->
                        <div id="cameraContainer" class="hidden">
                            <video id="video" autoplay class="w-full rounded-lg border-4 border-gray-300 bg-black"></video>
                            <canvas id="canvas" class="hidden"></canvas>
                            
                            <div class="mt-4 flex gap-3">
                                <button type="button" id="captureBtn" 
                                    class="flex-1 bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg transition">
                                    <i class="fas fa-camera mr-2"></i>Ambil Foto
                                </button>
                                <button type="button" id="retakeBtn" 
                                    class="flex-1 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 px-6 rounded-lg transition hidden">
                                    <i class="fas fa-redo mr-2"></i>Foto Ulang
                                </button>
                            </div>
                        </div>

                        <!-- Preview Captured Photo -->
                        <div id="photoPreview" class="hidden">
                            <p class="text-sm text-gray-600 mb-2">Preview Foto:</p>
                            <img id="capturedPhoto" class="w-full rounded-lg border-4 border-green-500" alt="Captured Photo">
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="pt-6">
                    <button type="submit" id="submitBtn"
                        class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-lg transition transform hover:scale-105 shadow-lg">
                        <i class="fas fa-check-circle mr-2"></i>Simpan Peminjaman
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Loading Modal -->
    <div id="loadingModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-8 text-center">
            <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-green-500 mx-auto mb-4"></div>
            <p class="text-gray-700 font-semibold">Menyimpan data...</p>
        </div>
    </div>

    <script src="/js/camera.js"></script>
    <script>
        document.getElementById('formPeminjaman').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const capturedPhoto = document.getElementById('capturedPhoto').src;
            if (!capturedPhoto || capturedPhoto === window.location.href) {
                showNotificationModal('âŒ Error', 'Silakan ambil foto bukti peminjaman terlebih dahulu!', 'error');
                return;
            }
            
            // Validate NIM (11 digits)
            const nimValue = document.getElementById('nim').value.trim();
            if (!/^[0-9]{11}$/.test(nimValue)) {
                showNotificationModal('âŒ Validasi NIM', 'NIM harus terdiri dari 11 digit.\n\nContoh: 60200123456', 'error');
                return;
            }

            // Show loading modal for double-check face detection
            showDetectionLoadingModal();
            
            // Double-check face detection on the captured photo
            const faceCheckResult = await detectFaceInImage(capturedPhoto);
            
            hideDetectionLoadingModal();
            
            if (!faceCheckResult.detected) {
                showNotificationModal('âš ï¸ Validasi Wajah Gagal', 'Wajah tidak terdeteksi dalam foto.\n\nFoto harus memiliki wajah yang jelas untuk keamanan. Silakan ambil ulang foto.', 'warning');
                return;
            }

            const formData = {
                nama: document.getElementById('nama').value,
                nim: nimValue,
                kelas: document.getElementById('kelas').value,
                namaDosen: document.getElementById('namaDosen').value,
                jamKuliah: document.getElementById('jamKuliah').value,
                merkProyektor: document.getElementById('merkProyektor').value,
                noTelepon: document.getElementById('noTelepon').value || '-',
                fotoBukti: capturedPhoto
            };
            
            document.getElementById('loadingModal').classList.remove('hidden');
            
            try {
                const response = await fetch('/api/peminjaman', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });
                
                const result = await response.json();
                
                document.getElementById('loadingModal').classList.add('hidden');
                
                if (result.success) {
                    // Kirim WhatsApp otomatis jika ada nomor telepon
                    if (formData.noTelepon && formData.noTelepon !== '-') {
                        try {
                            const waResponse = await fetch(`/api/send-whatsapp/${result.data.id}`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            });
                            const waResult = await waResponse.json();
                            if (waResult.success) {
                                showNotificationModal('âœ… Berhasil', result.message + '\n\nðŸ“± Notifikasi WhatsApp telah dikirim!', 'success');
                            } else {
                                showNotificationModal('âœ… Berhasil', result.message + '\n\nâš ï¸ Notifikasi WhatsApp gagal dikirim.', 'success');
                            }
                        } catch (error) {
                            showNotificationModal('âœ… Berhasil', result.message + '\n\nâš ï¸ Notifikasi WhatsApp gagal dikirim.', 'success');
                        }
                    } else {
                        showNotificationModal('âœ… Berhasil', result.message, 'success');
                    }
                    setTimeout(() => {
                        window.location.href = '/';
                    }, 2000);
                } else {
                    showNotificationModal('âŒ Error', result.message, 'error');
                }
            } catch (error) {
                document.getElementById('loadingModal').classList.add('hidden');
                showNotificationModal('âŒ Error', 'Terjadi kesalahan: ' + error.message, 'error');
            }
        });

        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            
            if (mobileMenuBtn && mobileMenu) {
                mobileMenuBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const isHidden = mobileMenu.classList.contains('hidden');
                    
                    if (isHidden) {
                        mobileMenu.classList.remove('hidden');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-times text-2xl"></i>';
                    } else {
                        mobileMenu.classList.add('hidden');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-bars text-2xl"></i>';
                    }
                });

                document.addEventListener('click', (e) => {
                    if (!mobileMenuBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
                        mobileMenu.classList.add('hidden');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-bars text-2xl"></i>';
                    }
                });

                mobileMenu.querySelectorAll('a').forEach(link => {
                    link.addEventListener('click', () => {
                        mobileMenu.classList.add('hidden');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-bars text-2xl"></i>';
                    });
                });
            }
        });
    </script>
</body>
</html>
