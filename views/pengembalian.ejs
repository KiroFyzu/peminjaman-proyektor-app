<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Pengembalian Proyektor</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <i class="fas fa-video text-indigo-600 text-xl sm:text-2xl mr-2 sm:mr-3"></i>
                    <h1 class="text-base sm:text-xl font-bold text-gray-800">Peminjaman Proyektor</h1>
                </div>
                
                <!-- Desktop Menu -->
                <div class="hidden md:flex items-center space-x-4">
                    <a href="/" class="text-gray-600 hover:text-indigo-600 transition duration-200">
                        <i class="fas fa-home mr-1"></i> Home
                    </a>
                    <a href="/dashboard" class="text-gray-600 hover:text-indigo-600 transition duration-200">
                        <i class="fas fa-chart-line mr-1"></i> Dashboard
                    </a>
                </div>

                <!-- Mobile Menu Button -->
                <div class="md:hidden flex items-center">
                    <button id="mobileMenuBtn" class="text-gray-600 hover:text-indigo-600 focus:outline-none transition">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden bg-white border-t border-gray-200">
            <div class="px-4 pt-2 pb-4 space-y-2">
                <a href="/" class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 rounded-lg transition duration-200">
                    <i class="fas fa-home w-6 mr-2"></i> Home
                </a>
                <a href="/dashboard" class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-600 rounded-lg transition duration-200">
                    <i class="fas fa-chart-line w-6 mr-2"></i> Dashboard
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white rounded-xl shadow-2xl p-8 md:p-12">
            <div class="text-center mb-8">
                <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-undo text-blue-600 text-3xl"></i>
                </div>
                <h2 class="text-3xl font-bold text-gray-800">Form Pengembalian Proyektor</h2>
                <p class="text-gray-600 mt-2">Pilih peminjaman yang akan dikembalikan</p>
            </div>

            <!-- List Peminjaman Aktif -->
            <div id="peminjamanList" class="space-y-4 mb-8">
                <% if (peminjaman.length === 0) { %>
                    <div class="text-center py-12">
                        <i class="fas fa-inbox text-gray-300 text-6xl mb-4"></i>
                        <p class="text-gray-500 text-lg">Tidak ada peminjaman aktif saat ini</p>
                        <a href="/peminjaman" class="mt-4 inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg transition">
                            <i class="fas fa-plus mr-2"></i>Buat Peminjaman
                        </a>
                    </div>
                <% } else { %>
                    <% peminjaman.forEach((item) => { %>
                        <div class="border-2 border-gray-200 rounded-lg p-6 hover:border-blue-500 transition">
                            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                                <div class="flex-1">
                                    <div class="flex items-center mb-2">
                                        <span class="bg-green-100 text-green-700 text-xs font-semibold px-3 py-1 rounded-full">
                                            Sedang Dipinjam
                                        </span>
                                    </div>
                                    <h3 class="text-xl font-bold text-gray-800"><%= item.nama %></h3>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2 mt-3 text-sm text-gray-600">
                                        <p><i class="fas fa-chalkboard mr-2 text-indigo-500"></i><strong>Kelas:</strong> <%= item.kelas || '-' %></p>
                                        <p><i class="fas fa-user-tie mr-2 text-indigo-500"></i><strong>Dosen:</strong> <%= item.namaDosen || '-' %></p>
                                        <p><i class="fas fa-clock mr-2 text-indigo-500"></i><strong>Jam Kuliah:</strong> <%= item.jamKuliah || '-' %></p>
                                        <p><i class="fas fa-video mr-2 text-indigo-500"></i><strong>Proyektor:</strong> <%= item.merkProyektor %></p>
                                        <p><i class="fas fa-calendar mr-2 text-indigo-500"></i><strong>Tanggal Pinjam:</strong> <%= new Date(item.tanggalPeminjaman).toLocaleDateString('id-ID') %></p>
                                        <p><i class="fas fa-phone mr-2 text-indigo-500"></i><strong>No. Telp:</strong> <%= item.noTelepon || '-' %></p>
                                    </div>
                                </div>
                                <div>
                                    <button onclick="prosesKembalikan('<%= item.id %>')" 
                                        class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg transition whitespace-nowrap">
                                        <i class="fas fa-check-circle mr-2"></i>Kembalikan
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Modal Pengembalian -->
    <div id="modalPengembalian" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <div class="p-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-6">
                    <i class="fas fa-undo text-blue-500 mr-2"></i>Proses Pengembalian
                </h3>
                
                <form id="formPengembalian" class="space-y-6">
                    <input type="hidden" id="peminjamanId">
                    
                    <!-- Jam Selesai -->
                    <div>
                        <label class="block text-gray-700 font-semibold mb-2">
                            <i class="fas fa-clock mr-2"></i>Jam Selesai Pengembalian <span class="text-red-500">*</span>
                        </label>
                        <input type="time" id="jamSelesai" required 
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition">
                    </div>

                    <!-- Kamera Section -->
                    <div class="border-t pt-6">
                        <label class="block text-gray-700 font-semibold mb-4">
                            <i class="fas fa-camera mr-2"></i>Foto Bukti Pengembalian <span class="text-red-500">*</span>
                        </label>
                        
                        <div class="space-y-4">
                            <!-- Toggle Kamera Button -->
                            <button type="button" id="toggleCameraReturn" 
                                class="w-full bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-lg transition">
                                <i class="fas fa-camera mr-2"></i>Nyalakan Kamera
                            </button>

                            <!-- Video Preview -->
                            <div id="cameraContainerReturn" class="hidden">
                                <video id="videoReturn" autoplay class="w-full rounded-lg border-4 border-gray-300 bg-black"></video>
                                <canvas id="canvasReturn" class="hidden"></canvas>
                                
                                <div class="mt-4 flex gap-3">
                                    <button type="button" id="captureBtnReturn" 
                                        class="flex-1 bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg transition">
                                        <i class="fas fa-camera mr-2"></i>Ambil Foto
                                    </button>
                                    <button type="button" id="retakeBtnReturn" 
                                        class="flex-1 bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 px-6 rounded-lg transition hidden">
                                        <i class="fas fa-redo mr-2"></i>Foto Ulang
                                    </button>
                                </div>
                            </div>

                            <!-- Preview Captured Photo -->
                            <div id="photoPreviewReturn" class="hidden">
                                <p class="text-sm text-gray-600 mb-2">Preview Foto:</p>
                                <img id="capturedPhotoReturn" class="w-full rounded-lg border-4 border-green-500" alt="Captured Photo">
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="flex gap-3 pt-6">
                        <button type="button" onclick="closeModal()" 
                            class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition">
                            <i class="fas fa-times mr-2"></i>Batal
                        </button>
                        <button type="submit" 
                            class="flex-1 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg transition">
                            <i class="fas fa-check-circle mr-2"></i>Simpan Pengembalian
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Loading Modal -->
    <div id="loadingModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-8 text-center">
            <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-blue-500 mx-auto mb-4"></div>
            <p class="text-gray-700 font-semibold">Menyimpan data...</p>
        </div>
    </div>

    <script src="/js/camera-return.js"></script>
    <script>
        function prosesKembalikan(id) {
            document.getElementById('peminjamanId').value = id;
            document.getElementById('modalPengembalian').classList.remove('hidden');
            
            // Set default jam selesai ke waktu sekarang
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            document.getElementById('jamSelesai').value = `${hours}:${minutes}`;
        }

        function closeModal() {
            document.getElementById('modalPengembalian').classList.add('hidden');
            // Stop camera if running
            const video = document.getElementById('videoReturn');
            if (video.srcObject) {
                video.srcObject.getTracks().forEach(track => track.stop());
            }
        }

        document.getElementById('formPengembalian').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const capturedPhoto = document.getElementById('capturedPhotoReturn').src;
            if (!capturedPhoto || capturedPhoto === window.location.href) {
                alert('Silakan ambil foto bukti pengembalian terlebih dahulu!');
                return;
            }
            
            const id = document.getElementById('peminjamanId').value;
            const jamSelesai = document.getElementById('jamSelesai').value;
            
            document.getElementById('loadingModal').classList.remove('hidden');
            
            try {
                const response = await fetch(`/api/pengembalian/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        jamSelesai: jamSelesai,
                        fotoBukti: capturedPhoto
                    })
                });
                
                const result = await response.json();
                
                document.getElementById('loadingModal').classList.add('hidden');
                
                if (result.success) {
                    // Kirim WhatsApp otomatis jika ada nomor telepon
                    if (result.data.noTelepon && result.data.noTelepon !== '-') {
                        try {
                            const waResponse = await fetch(`/api/send-whatsapp/${id}`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                }
                            });
                            const waResult = await waResponse.json();
                            if (waResult.success) {
                                alert('âœ… ' + result.message + '\n\nðŸ“± Notifikasi WhatsApp telah dikirim!');
                            } else {
                                alert('âœ… ' + result.message + '\n\nâš ï¸ Notifikasi WhatsApp gagal dikirim.');
                            }
                        } catch (error) {
                            alert('âœ… ' + result.message + '\n\nâš ï¸ Notifikasi WhatsApp gagal dikirim.');
                        }
                    } else {
                        alert('âœ… ' + result.message);
                    }
                    window.location.reload();
                } else {
                    alert('âŒ ' + result.message);
                }
            } catch (error) {
                document.getElementById('loadingModal').classList.add('hidden');
                alert('âŒ Terjadi kesalahan: ' + error.message);
            }
        });

        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileMenu = document.getElementById('mobileMenu');
            
            if (mobileMenuBtn && mobileMenu) {
                mobileMenuBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const isHidden = mobileMenu.classList.contains('hidden');
                    
                    if (isHidden) {
                        mobileMenu.classList.remove('hidden');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-times text-2xl"></i>';
                    } else {
                        mobileMenu.classList.add('hidden');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-bars text-2xl"></i>';
                    }
                });

                document.addEventListener('click', (e) => {
                    if (!mobileMenuBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
                        mobileMenu.classList.add('hidden');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-bars text-2xl"></i>';
                    }
                });

                mobileMenu.querySelectorAll('a').forEach(link => {
                    link.addEventListener('click', () => {
                        mobileMenu.classList.add('hidden');
                        mobileMenuBtn.innerHTML = '<i class="fas fa-bars text-2xl"></i>';
                    });
                });
            }
        });
    </script>
</body>
</html>
