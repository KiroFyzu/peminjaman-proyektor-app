<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Peminjaman</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <i class="fas fa-video text-indigo-600 text-2xl mr-3"></i>
                    <h1 class="text-xl font-bold text-gray-800">Peminjaman Proyektor</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/" class="text-gray-600 hover:text-indigo-600 transition">
                        <i class="fas fa-home mr-1"></i> Home
                    </a>
                    <a href="/peminjaman" class="text-gray-600 hover:text-indigo-600 transition">
                        <i class="fas fa-plus mr-1"></i> Peminjaman
                    </a>
                    <a href="/pengembalian" class="text-gray-600 hover:text-indigo-600 transition">
                        <i class="fas fa-undo mr-1"></i> Pengembalian
                    </a>
                    <a href="/booking" class="text-gray-600 hover:text-indigo-600 transition">
                        <i class="fas fa-calendar-check mr-1"></i> Booking
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white rounded-xl shadow-2xl p-8 md:p-12">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
                <div>
                    <h2 class="text-3xl font-bold text-gray-800">
                        <i class="fas fa-chart-line mr-2"></i>Dashboard Peminjaman
                    </h2>
                    <p class="text-gray-600 mt-2">Kelola dan pantau semua peminjaman proyektor</p>
                </div>
                <div class="mt-4 md:mt-0">
                    <select id="filterStatus" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                        <option value="semua">Semua Status</option>
                        <option value="dipinjam">Sedang Dipinjam</option>
                        <option value="dikembalikan">Sudah Dikembalikan</option>
                    </select>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-lg shadow-md hover:shadow-lg transition">
                    <div class="flex items-center justify-between mb-2">
                        <p class="text-sm text-gray-600">Total Peminjaman</p>
                        <i class="fas fa-clipboard-list text-purple-400 text-xl"></i>
                    </div>
                    <p class="text-3xl font-bold text-purple-600"><%= peminjaman.length %></p>
                    <p class="text-xs text-gray-500 mt-1">Semua waktu</p>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-lg shadow-md hover:shadow-lg transition">
                    <div class="flex items-center justify-between mb-2">
                        <p class="text-sm text-gray-600">Sedang Dipinjam</p>
                        <i class="fas fa-box-open text-green-400 text-xl"></i>
                    </div>
                    <p class="text-3xl font-bold text-green-600"><%= peminjaman.filter(p => p.status === 'dipinjam').length %></p>
                    <p class="text-xs text-gray-500 mt-1">Aktif sekarang</p>
                </div>
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-lg shadow-md hover:shadow-lg transition">
                    <div class="flex items-center justify-between mb-2">
                        <p class="text-sm text-gray-600">Sudah Dikembalikan</p>
                        <i class="fas fa-check-circle text-blue-400 text-xl"></i>
                    </div>
                    <p class="text-3xl font-bold text-blue-600"><%= peminjaman.filter(p => p.status === 'dikembalikan').length %></p>
                    <p class="text-xs text-gray-500 mt-1">Selesai</p>
                </div>
                <div class="bg-gradient-to-br from-orange-50 to-orange-100 p-6 rounded-lg shadow-md hover:shadow-lg transition">
                    <div class="flex items-center justify-between mb-2">
                        <p class="text-sm text-gray-600">Hari Ini</p>
                        <i class="fas fa-calendar-day text-orange-400 text-xl"></i>
                    </div>
                    <p class="text-3xl font-bold text-orange-600">
                        <%= peminjaman.filter(p => new Date(p.tanggalPeminjaman).toDateString() === new Date().toDateString()).length %>
                    </p>
                    <p class="text-xs text-gray-500 mt-1"><%= new Date().toLocaleDateString('id-ID', { day: 'numeric', month: 'short' }) %></p>
                </div>
            </div>

            <!-- Additional Info Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <!-- Proyektor Paling Sering Dipinjam -->
                <div class="bg-white border-2 border-indigo-100 rounded-xl p-6 shadow-md">
                    <div class="flex items-center mb-4">
                        <div class="bg-indigo-100 p-3 rounded-lg mr-3">
                            <i class="fas fa-trophy text-indigo-600 text-xl"></i>
                        </div>
                        <h3 class="font-bold text-gray-700">Proyektor Terpopuler</h3>
                    </div>
                    <%
                        const proyektorCount = {};
                        peminjaman.forEach(p => {
                            proyektorCount[p.merkProyektor] = (proyektorCount[p.merkProyektor] || 0) + 1;
                        });
                        const mostPopular = Object.entries(proyektorCount).sort((a, b) => b[1] - a[1])[0];
                    %>
                    <% if (mostPopular) { %>
                        <p class="text-2xl font-bold text-indigo-600"><%= mostPopular[0] %></p>
                        <p class="text-sm text-gray-500"><%= mostPopular[1] %>x dipinjam</p>
                    <% } else { %>
                        <p class="text-gray-400">Belum ada data</p>
                    <% } %>
                </div>

                <!-- Minggu Ini -->
                <div class="bg-white border-2 border-green-100 rounded-xl p-6 shadow-md">
                    <div class="flex items-center mb-4">
                        <div class="bg-green-100 p-3 rounded-lg mr-3">
                            <i class="fas fa-calendar-week text-green-600 text-xl"></i>
                        </div>
                        <h3 class="font-bold text-gray-700">Minggu Ini</h3>
                    </div>
                    <%
                        const weekAgo = new Date();
                        weekAgo.setDate(weekAgo.getDate() - 7);
                        const thisWeek = peminjaman.filter(p => new Date(p.tanggalPeminjaman) >= weekAgo).length;
                    %>
                    <p class="text-2xl font-bold text-green-600"><%= thisWeek %></p>
                    <p class="text-sm text-gray-500">peminjaman baru</p>
                </div>

                <!-- Bulan Ini -->
                <div class="bg-white border-2 border-purple-100 rounded-xl p-6 shadow-md">
                    <div class="flex items-center mb-4">
                        <div class="bg-purple-100 p-3 rounded-lg mr-3">
                            <i class="fas fa-calendar-alt text-purple-600 text-xl"></i>
                        </div>
                        <h3 class="font-bold text-gray-700">Bulan Ini</h3>
                    </div>
                    <%
                        const thisMonth = peminjaman.filter(p => {
                            const date = new Date(p.tanggalPeminjaman);
                            const now = new Date();
                            return date.getMonth() === now.getMonth() && date.getFullYear() === now.getFullYear();
                        }).length;
                    %>
                    <p class="text-2xl font-bold text-purple-600"><%= thisMonth %></p>
                    <p class="text-sm text-gray-500"><%= new Date().toLocaleDateString('id-ID', { month: 'long' }) %></p>
                </div>
            </div>

            <!-- Aktivitas Terbaru & Status Proyektor -->
            <%
                // Calculate proyektor count for reuse
                let proyektorCount = {};
                peminjaman.forEach(p => {
                    proyektorCount[p.merkProyektor] = (proyektorCount[p.merkProyektor] || 0) + 1;
                });
            %>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
                <!-- Aktivitas Terbaru -->
                <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-6 shadow-md">
                    <h3 class="font-bold text-lg text-gray-700 mb-4 flex items-center">
                        <i class="fas fa-clock text-blue-600 mr-2"></i>
                        Aktivitas Terbaru
                    </h3>
                    <div class="space-y-3 max-h-64 overflow-y-auto">
                        <% peminjaman.slice(0, 5).forEach((item) => { %>
                            <div class="bg-white p-3 rounded-lg shadow-sm border-l-4 <%= item.status === 'dipinjam' ? 'border-green-500' : 'border-blue-500' %>">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <p class="font-semibold text-sm text-gray-800"><%= item.nama %></p>
                                        <p class="text-xs text-gray-500"><%= item.merkProyektor %> ‚Ä¢ <%= item.kelas || '-' %></p>
                                    </div>
                                    <span class="text-xs <%= item.status === 'dipinjam' ? 'bg-green-100 text-green-700' : 'bg-blue-100 text-blue-700' %> px-2 py-1 rounded-full font-semibold">
                                        <%= item.status === 'dipinjam' ? 'üì¶ Dipinjam' : '‚úÖ Kembali' %>
                                    </span>
                                </div>
                                <p class="text-xs text-gray-400 mt-1">
                                    <i class="far fa-clock mr-1"></i>
                                    <%= new Date(item.tanggalPeminjaman).toLocaleString('id-ID', { day: 'numeric', month: 'short', hour: '2-digit', minute: '2-digit' }) %>
                                </p>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <!-- Status Proyektor -->
                <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 shadow-md">
                    <h3 class="font-bold text-lg text-gray-700 mb-4 flex items-center">
                        <i class="fas fa-video text-purple-600 mr-2"></i>
                        Status Proyektor
                    </h3>
                    <%
                        const proyektorStatus = {};
                        const proyektorList = ['Epson EB-X41', 'Epson EB-S41', 'BenQ MX535', 'BenQ MS535A'];
                        
                        proyektorList.forEach(proj => {
                            const dipinjam = peminjaman.find(p => p.merkProyektor === proj && p.status === 'dipinjam');
                            proyektorStatus[proj] = dipinjam ? 'dipinjam' : 'tersedia';
                        });
                    %>
                    <div class="space-y-3">
                        <% Object.entries(proyektorStatus).forEach(([proj, status]) => { %>
                            <div class="bg-white p-4 rounded-lg shadow-sm flex justify-between items-center">
                                <div class="flex items-center">
                                    <div class="bg-<%= status === 'dipinjam' ? 'red' : 'green' %>-100 p-2 rounded-lg mr-3">
                                        <i class="fas fa-video text-<%= status === 'dipinjam' ? 'red' : 'green' %>-600"></i>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-sm text-gray-800"><%= proj %></p>
                                        <p class="text-xs text-gray-500">
                                            <%= proyektorCount[proj] || 0 %>x total peminjaman
                                        </p>
                                    </div>
                                </div>
                                <span class="px-3 py-1 rounded-full text-xs font-bold <%= status === 'dipinjam' ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' %>">
                                    <%= status === 'dipinjam' ? 'üî¥ Dipinjam' : 'üü¢ Tersedia' %>
                                </span>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Analytics Section -->
            <div class="mb-8">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-2xl font-bold text-gray-800">
                        <i class="fas fa-chart-bar mr-2 text-indigo-600"></i>Analytics & Insights
                    </h3>
                    <select id="chartPeriod" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                        <option value="7">7 Hari Terakhir</option>
                        <option value="30" selected>30 Hari Terakhir</option>
                        <option value="90">90 Hari Terakhir</option>
                        <option value="365">1 Tahun</option>
                    </select>
                </div>

                <!-- Charts Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Trend Peminjaman -->
                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
                        <h4 class="font-bold text-lg text-gray-700 mb-4 flex items-center">
                            <i class="fas fa-chart-line text-blue-600 mr-2"></i>
                            Trend Peminjaman Bulanan
                        </h4>
                        <canvas id="trendChart" height="250"></canvas>
                    </div>

                    <!-- Distribusi Proyektor -->
                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
                        <h4 class="font-bold text-lg text-gray-700 mb-4 flex items-center">
                            <i class="fas fa-chart-pie text-purple-600 mr-2"></i>
                            Distribusi Penggunaan Proyektor
                        </h4>
                        <canvas id="proyektorChart" height="250"></canvas>
                    </div>

                    <!-- Status Peminjaman -->
                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
                        <h4 class="font-bold text-lg text-gray-700 mb-4 flex items-center">
                            <i class="fas fa-chart-donut text-green-600 mr-2"></i>
                            Status Peminjaman
                        </h4>
                        <canvas id="statusChart" height="250"></canvas>
                    </div>

                    <!-- Aktivitas Harian -->
                    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-md">
                        <h4 class="font-bold text-lg text-gray-700 mb-4 flex items-center">
                            <i class="fas fa-chart-bar text-orange-600 mr-2"></i>
                            Aktivitas Harian (7 Hari Terakhir)
                        </h4>
                        <canvas id="dailyChart" height="250"></canvas>
                    </div>
                </div>
            </div>

            <!-- Search & Export Section -->                <!-- Status Proyektor -->
                <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 shadow-md">
                    <h3 class="font-bold text-lg text-gray-700 mb-4 flex items-center">
                        <i class="fas fa-video text-purple-600 mr-2"></i>
                        Status Proyektor
                    </h3>
                    <%
                        const proyektorStatus = {};
                        const proyektorList = ['Epson EB-X41', 'Epson EB-S41', 'BenQ MX535', 'BenQ MS535A'];
                        
                        proyektorList.forEach(proj => {
                            const dipinjam = peminjaman.find(p => p.merkProyektor === proj && p.status === 'dipinjam');
                            proyektorStatus[proj] = dipinjam ? 'dipinjam' : 'tersedia';
                        });
                    %>
                    <div class="space-y-3">
                        <% Object.entries(proyektorStatus).forEach(([proj, status]) => { %>
                            <div class="bg-white p-4 rounded-lg shadow-sm flex justify-between items-center">
                                <div class="flex items-center">
                                    <div class="bg-<%= status === 'dipinjam' ? 'red' : 'green' %>-100 p-2 rounded-lg mr-3">
                                        <i class="fas fa-video text-<%= status === 'dipinjam' ? 'red' : 'green' %>-600"></i>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-sm text-gray-800"><%= proj %></p>
                                        <p class="text-xs text-gray-500">
                                            <%= proyektorCount[proj] || 0 %>x total peminjaman
                                        </p>
                                    </div>
                                </div>
                                <span class="px-3 py-1 rounded-full text-xs font-bold <%= status === 'dipinjam' ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' %>">
                                    <%= status === 'dipinjam' ? 'üî¥ Dipinjam' : 'üü¢ Tersedia' %>
                                </span>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Search & Export Section -->
            <div class="mb-8 space-y-4">
                <!-- Search Bar -->
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="flex-1">
                        <input type="text" id="searchInput" placeholder="üîç Cari nama, NIM, kelas, dosen, atau proyektor..."
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500">
                    </div>
                    <button onclick="searchData()" 
                        class="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                        <i class="fas fa-search mr-2"></i>Cari
                    </button>
                </div>
                
                <!-- Advanced Filters -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <select id="proyektorFilter" class="px-4 py-2 border border-gray-300 rounded-lg">
                        <option value="semua">Semua Proyektor</option>
                        <option value="Epson EB-X41">Epson EB-X41</option>
                        <option value="Epson EB-S41">Epson EB-S41</option>
                        <option value="BenQ MX535">BenQ MX535</option>
                        <option value="BenQ MS535A">BenQ MS535A</option>
                    </select>
                    
                    <input type="date" id="startDate" placeholder="Dari Tanggal"
                        class="px-4 py-2 border border-gray-300 rounded-lg">
                    
                    <input type="date" id="endDate" placeholder="Sampai Tanggal"
                        class="px-4 py-2 border border-gray-300 rounded-lg">
                    
                    <button onclick="resetFilters()" 
                        class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition">
                        <i class="fas fa-redo mr-2"></i>Reset
                    </button>
                </div>
                
                <!-- Export Buttons -->
                <div class="flex flex-wrap gap-4">
                    <button onclick="exportPDF()" 
                        class="px-6 py-3 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
                        <i class="fas fa-file-pdf mr-2"></i>Export PDF
                    </button>
                    <button onclick="exportExcel()" 
                        class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                        <i class="fas fa-file-excel mr-2"></i>Export Excel
                    </button>
                </div>
            </div>

            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Nama</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Kelas</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700 hidden md:table-cell">Dosen</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700 hidden lg:table-cell">Jam Kuliah</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Proyektor</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700 hidden md:table-cell">Waktu</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Status</th>
                            <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Aksi</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <% if (peminjaman.length === 0) { %>
                            <tr>
                                <td colspan="8" class="px-4 py-8 text-center text-gray-500">
                                    <i class="fas fa-inbox text-4xl mb-2"></i>
                                    <p>Belum ada data peminjaman</p>
                                </td>
                            </tr>
                        <% } else { %>
                            <% peminjaman.reverse().forEach((item) => { %>
                                <tr class="border-b hover:bg-gray-50 transition data-row" data-status="<%= item.status %>">
                                    <td class="px-4 py-4 text-sm"><%= item.nama %></td>
                                    <td class="px-4 py-4 text-sm"><%= item.kelas || '-' %></td>
                                    <td class="px-4 py-4 text-sm hidden md:table-cell"><%= item.namaDosen || '-' %></td>
                                    <td class="px-4 py-4 text-sm hidden lg:table-cell"><%= item.jamKuliah || '-' %></td>
                                    <td class="px-4 py-4 text-sm"><%= item.merkProyektor %></td>
                                    <td class="px-4 py-4 text-sm hidden md:table-cell">
                                        <div class="text-xs">
                                            <p><strong>Pinjam:</strong> <%= new Date(item.tanggalPeminjaman).toLocaleDateString('id-ID') %></p>
                                            <% if (item.jamSelesai) { %>
                                                <p><strong>Kembali:</strong> <%= item.jamSelesai %></p>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="px-4 py-4 text-sm">
                                        <% if (item.status === 'dipinjam') { %>
                                            <span class="bg-green-100 text-green-700 text-xs font-semibold px-3 py-1 rounded-full">
                                                Dipinjam
                                            </span>
                                        <% } else { %>
                                            <span class="bg-blue-100 text-blue-700 text-xs font-semibold px-3 py-1 rounded-full">
                                                Dikembalikan
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="px-4 py-4 text-sm">
                                        <div class="flex gap-2">
                                            <button onclick="lihatDetail(this)" 
                                                data-item='<%- JSON.stringify(item) %>'
                                                class="bg-indigo-500 hover:bg-indigo-600 text-white px-3 py-1 rounded text-xs transition"
                                                title="Lihat Detail">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button onclick="showQR('<%= item.id %>')" 
                                                class="bg-purple-500 hover:bg-purple-600 text-white px-3 py-1 rounded text-xs transition"
                                                title="Lihat QR Code">
                                                <i class="fas fa-qrcode"></i>
                                            </button>
                                            <% if (item.noTelepon && item.noTelepon !== '-') { %>
                                                <% if (item.status === 'dipinjam') { %>
                                                    <button onclick="kirimReminder('<%= item.id %>')" 
                                                        class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-xs transition"
                                                        title="Kirim Reminder">
                                                        <i class="fab fa-whatsapp"></i>
                                                    </button>
                                                <% } else { %>
                                                    <button onclick="kirimWhatsApp('<%= item.id %>')" 
                                                        class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-xs transition"
                                                        title="Kirim WhatsApp">
                                                        <i class="fab fa-whatsapp"></i>
                                                    </button>
                                                <% } %>
                                            <% } %>
                                            <button onclick="hapusData('<%= item.id %>')" 
                                                class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-xs transition"
                                                title="Hapus Data">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Detail -->
    <div id="modalDetail" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
            <div class="p-8">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-2xl font-bold text-gray-800">
                        <i class="fas fa-info-circle text-indigo-500 mr-2"></i>Detail Peminjaman
