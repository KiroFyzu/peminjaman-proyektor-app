        async function hapusData(id) {
            if (!confirm('Yakin ingin menghapus data peminjaman ini?')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/peminjaman/${id}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Hapus row dari table tanpa refresh
                    const rows = document.querySelectorAll('.data-row');
                    rows.forEach(row => {
                        const button = row.querySelector(`button[onclick*="${id}"]`);
                        if (button) {
                            row.remove();
                        }
                    });
                    
                    // Update statistik secara realtime
                    await updateStats();
                    
                    // Show success notification
                    showNotification('‚úÖ Data berhasil dihapus', 'success');
                } else {
                    showNotification('‚ùå Gagal menghapus data', 'error');
                }
            } catch (error) {
                showNotification('‚ùå Terjadi kesalahan: ' + error.message, 'error');
            }
        }

        // Update statistik secara realtime
        async function updateStats() {
            try {
                const response = await fetch('/api/peminjaman');
                const data = await response.json();
                
                // Update cards
                const totalEl = document.querySelector('.from-purple-50 .text-3xl');
                const dipinjamEl = document.querySelector('.from-green-50 .text-3xl');
                const dikembalikanEl = document.querySelector('.from-blue-50 .text-3xl');
                const hariIniEl = document.querySelector('.from-orange-50 .text-3xl');
                
                if (totalEl) totalEl.textContent = data.length;
                if (dipinjamEl) dipinjamEl.textContent = data.filter(p => p.status === 'dipinjam').length;
                if (dikembalikanEl) dikembalikanEl.textContent = data.filter(p => p.status === 'dikembalikan').length;
                
                const today = new Date().toDateString();
                const hariIniCount = data.filter(p => new Date(p.tanggalPeminjaman).toDateString() === today).length;
                if (hariIniEl) hariIniEl.textContent = hariIniCount;
                
                // Update info cards
                const weekAgo = new Date();
                weekAgo.setDate(weekAgo.getDate() - 7);
                const thisWeek = data.filter(p => new Date(p.tanggalPeminjaman) >= weekAgo).length;
                
                const thisMonth = data.filter(p => {
                    const date = new Date(p.tanggalPeminjaman);
                    const now = new Date();
                    return date.getMonth() === now.getMonth() && date.getFullYear() === now.getFullYear();
                }).length;
                
                // Update proyektor terpopuler
                const proyektorCount = {};
                data.forEach(p => {
                    proyektorCount[p.merkProyektor] = (proyektorCount[p.merkProyektor] || 0) + 1;
                });
                const mostPopular = Object.entries(proyektorCount).sort((a, b) => b[1] - a[1])[0];
                
                // Check if table is empty after delete
                const tableBody = document.getElementById('tableBody');
                if (tableBody && tableBody.querySelectorAll('.data-row').length === 0) {
                    tableBody.innerHTML = `
                        <tr>
                            <td colspan="9" class="px-4 py-8 text-center text-gray-500">
                                <i class="fas fa-inbox text-4xl mb-2"></i>
                                <p>Belum ada data peminjaman</p>
                            </td>
                        </tr>
                    `;
                }
            } catch (error) {
                console.error('Error updating stats:', error);
            }
        }

        // Show notification
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            const bgColors = {
                success: 'bg-green-500',
                error: 'bg-red-500',
                warning: 'bg-yellow-500',
                info: 'bg-blue-500'
            };
            notification.className = `fixed top-4 right-4 z-50 px-6 py-4 rounded-lg shadow-lg transform transition-all duration-300 ${
                bgColors[type] || 'bg-gray-500'
            } text-white font-semibold`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 10);
            
            // Remove after 3 seconds
            setTimeout(() => {
                notification.style.transform = 'translateX(400px)';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

